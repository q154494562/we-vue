{
  "name": "we-vue",
  "version": "3.0.0-alpha.2",
  "description": "Vue components based on Vue2.x and weui1.x",
  "keywords": [
    "vue",
    "weui",
    "we-vue",
    "component"
  ],
  "author": "tianyong90 <412039588@qq.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tianyong90/we-vue.git"
  },
  "homepage": "https://wevue.org",
  "bugs": {
    "url": "https://github.com/tianyong90/we-vue/issues"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "style": "lib/we-vue-css/index.css",
  "typings": "types/indes.d.ts",
  "files": [
    "es",
    "lib",
    "packages",
    "types"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.vue packages demo docs test/unit/specs",
    "lint:fix": "npm run lint -- --fix",
    "build:lib": "node build/build-lib.js",
    "build:components": "node build/build-components.js --color",
    "build:demo": "rimraf dist && cross-env NODE_ENV=production webpack --config build/webpack.demo.conf.js --color",
    "build:docs": "rimraf docs-dist && cross-env NODE_ENV=production webpack --config build/webpack.docsprod.conf.js --color",
    "build:entry": "node build/build-entry.js",
    "build:we-vue-css": "gulp build --gulpfile packages/style/gulpfile.js --color --silent",
    "build:style-entry": "node build/build-style-entry.js",
    "build:we-vue": "cross-env NODE_ENV=production webpack --color --config build/webpack.build.conf.js && cross-env NODE_ENV=production webpack -p --color --config build/webpack.build.conf.js",
    "dev": "npm run build:entry && webpack-dev-server --inline --config build/webpack.dev.conf.js",
    "dev:docs": "webpack-dev-server --inline --config build/webpack.docsdev.conf.js",
    "test": "jest --config=test/unit/jest.conf.js --runInBand",
    "test:watch": "jest --config=test/unit/jest.conf.js --watchAll",
    "coverage": "start test/unit/coverage/lcov-report/index.html",
    "release": "node build/release.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "vue-lazyload": "^1.2.0"
  },
  "peerDependencies": {
    "vue": ">= 2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@tianyong90/vue-markdown-loader": "^0.0.1",
    "@vue/test-utils": "^1.0.0-beta.25",
    "address": "^1.0.3",
    "autoprefixer": "^9.1.5",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.0.0",
    "babel-loader": "^8.0.0",
    "bootstrap": "^4.1.1",
    "codecov": "^3.0.0",
    "commitizen": "^3.0.2",
    "conventional-changelog": "^2.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "dependency-tree": "^6.1.1",
    "docsearch.js": "^2.5.2",
    "eslint": "^5.5.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^7.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^4.3.0",
    "faker": "^4.1.0",
    "file-loader": "^2.0.0",
    "firacode": "^1.205.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^7.0.0",
    "git-branch": "^2.0.1",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.10.0",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^1.1.0",
    "inject-loader": "^4.0.0",
    "inquirer": "^6.0.0",
    "jest": "^23.0.0",
    "jest-css-modules": "^1.1.0",
    "jest-serializer-vue": "^2.0.0",
    "lint-staged": "^7.3.0",
    "listr": "^0.14.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "perfect-scrollbar": "^1.4.0",
    "portfinder": "^1.0.13",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-safe-parser": "^4.0.1",
    "postcss-url": "^8.0.0",
    "qrcode": "^1.2.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^7.0.0",
    "semver": "^5.3.0",
    "shelljs": "^0.8.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.0",
    "uppercamelcase": "3.0.0",
    "url-loader": "^1.0.1",
    "vue": "^2.5.9",
    "vue-jest": "^2.5.0",
    "vue-loader": "^15.2.0",
    "vue-router": "^3.0.1",
    "vue-sfc-compiler": "^0.1.3",
    "vue-style-loader": "^4.0.2",
    "vue-template-compiler": "^2.5.9",
    "vuex": "^3.0.1",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.1",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.0",
    "webpackbar": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
